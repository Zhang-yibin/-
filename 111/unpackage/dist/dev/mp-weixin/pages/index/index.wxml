<view class="content"><image class="logo" src="/static/logo.png"></image><view class="text-area"><text class="title">{{title}}</text></view><button data-event-opts="{{[['tap',[['navigateToDouyin',['$event']]]]]}}" class="social-btn" bindtap="__e">前往抖音</button><button data-event-opts="{{[['tap',[['scanItem',['$event']]]]]}}" class="scan-btn" bindtap="__e">扫描物品</button><button data-event-opts="{{[['tap',[['recommendRecipe',['$event']]]]]}}" class="recipe-btn" bindtap="__e">推荐食谱</button><button data-event-opts="{{[['tap',[['startVoiceInput',['$event']]]]]}}" class="voice-btn" bindtap="__e">语音录入</button><view class="manual-input-section"><text class="section-title">手动录入</text><view class="input-fields"><input class="input" placeholder="种类" data-event-opts="{{[['input',[['__set_model',['','manualItemName','$event',[]]]]]]}}" value="{{manualItemName}}" bindinput="__e"/><input class="input" placeholder="存放时间" data-event-opts="{{[['input',[['__set_model',['','manualStorageDate','$event',[]]]]]]}}" value="{{manualStorageDate}}" bindinput="__e"/><input class="input" placeholder="保质期" data-event-opts="{{[['input',[['__set_model',['','manualExpireDate','$event',[]]]]]]}}" value="{{manualExpireDate}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['submitManualData',['$event']]]]]}}" class="submit-btn" bindtap="__e">提交</button></view></view><view class="inventory"><block wx:for="{{inventory}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="inventory-item"><text class="item-name">{{item.name}}</text><text class="item-quantity">{{"数量："+item.quantity}}</text><text class="item-expire">{{"保质期："+item.expireDate}}</text><text class="item-date">{{"扫描日期："+item.scanDate}}</text></view></block></view></view>